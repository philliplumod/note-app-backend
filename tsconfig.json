{
  "compilerOptions": {
    "target": "ES2020",          
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true           
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
